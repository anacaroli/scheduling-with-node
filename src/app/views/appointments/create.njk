{% extends "_layouts/defaut.njk" %}

{% block body %}

<div class="content">
  <strong></strong>
  <div class="provider">
    <div>
      <img src="/files/{{ provider.avatar }}" alt=""/>
      <strong>{{ provider.name }}</strong>
    </div>
  </div>

  <form action="/app/appointments/new/{{ provider.id }}", method="post">
    <input type="text" class="flatpickr" placeholder="Escolha uma data">

  <div id="hours">
    <label>
      <input type="radio"/>
      12:00
    </label>
    <label>
      <input type="radio"/>
      13:00
    </label>
    <label>
      <input type="radio"/>
      14:00
    </label>
    <label>
      <input type="radio"/>
      15:00
    </label>
  </div>
<button type="submit">Agendar</button>
  </form>

</div>
<script type="text/javascript">
flatpickr('.flatpickr',{
  minDate: new Date(),
  dateFormat: 'd/m/y',
  onChange: function (date) {
    fetch (`/app/available/{{ provide.id }}?date=${date[0].getTime()}`)
  }
})
</script>
{% endblock %}
